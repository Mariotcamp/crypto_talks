<div class="edit-post flex">
  <%= render '/shared/left-content' %>
  <div class="center-content">
    <div class="post-view-title">
      <% score = current_end_user.quiz_score %>
      <% if score == 0 or score == 1 or score == 2 or score == 3 %>
        <p>LowRoom</p>
      <% elsif score == 4 or score == 5 or score == 6 %>
        <p>MiddleRoom</p>
      <% else %>
        <p>UpperRoom</p>
      <% end %>
    </div>
    <div class="posting">
      <div class="card">
        <div class="card-body">
          <div class="post_end_user flex">
            <% if @post.end_user.image.attached? %>
              <div class="profile-image"><%= image_tag @post.end_user.image %></div>
            <% else %>
              <div class="profile-image"><img src="/assets/no_image.jpg"></div>
            <% end %>
            <h2 class="post_end_user_name"><%= @post.end_user.name %><br>
              <div class="post-form">
                <%= form_with(model: @post, local: true) do |f| %>
                  <%= f.text_area :sentence, id: "edit-post-sentence", size: "100x3" %>
                  <%= f.button :type => "submit", class: "post-button" do %>
                    <i class="far fa-paper-plane"></i>
                  <% end %>
                <% end %>
              </div>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>