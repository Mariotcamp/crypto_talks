<div class="comment-content">
  <div class="posting" id="comment-posting">
    <% comments.each do |comment| %>
      <div class="card">
        <div class="card-body">
          <div class="post_end_user flex">
            <% if comment.end_user.image.attached? %>
              <div class="profile-image"><a href="/end_users/<%= comment.end_user.id %>"><%= image_tag comment.end_user.image %></a></div>
             <% else %>
               <div class="profile-image"><a href="/end_users/<%= comment.end_user.id %>"><%= image_tag asset_path("no_image.jpg", alt: "no_image") %></a></div>
             <% end %>
            <h2 class="post_end_user_name"><a href="/end_users/<%= comment.end_user.id %>"><%= comment.end_user.name %></a><br><p><%= comment.sentence %></p></h2>
            <% if comment.end_user.id == current_end_user.id %>
               <div class="dropdown posting-dropdown">
                <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-h"></i>
                </a>
                 <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a data-confirm="本当に削除しますか？この操作は取り消せません。" class="dropdown-item" href="/posts/<%= comment.post.id %>/comments/<%= comment.id %>" data-method="delete" data-remote="true"><i class="fas fa-trash-alt"></i>　削除</a>
                 </div>
              </div>
             <% end %>
             <p class="posting-time"><%= time_ago_in_words(comment.updated_at) %>前</p>
          </div>
         </div>
      </div>
    <% end %>
  </div>
</div>